        <link rel="stylesheet" href="/css/users_profile.css">
        <h1>Codeial | Profile Homepage /</h1>



        
        <% if( user.id == profile_user.id) { %>
                <!-- if user matches then show the form -->
                <form action="/users/update/<%= profile_user.id%>" method="POST">
                <input type="text" name="name" placeholder="Youe Name" value="<%=profile_user.name%>" required>
                <input type="email" name="email" placeholder="Youe Email" value="<%=profile_user.email%>" required>
                <input type="submit" value="Update">
        </form>
                <!-- else show the basic info of the user -->
                <% } else { %>
                        <p>Email: <%=profile_user.email%></p>
                        <p>Name: <%=profile_user.name%></p>         
                <% } %>